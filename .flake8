[flake8]

indent-size = 4
statistics = True

multiline-quotes = """
docstring-quotes = """
inline-quotes = "

# Cyclomatic complexity desactivated
max-complexity = 15 

# Ignore the unused import in __init__.py
per-file-ignores = __init__.py:F401

docstring-style=google

# Ignore docstring double quote error
ignore = W503  # Will soon be an anti-pattern: https://www.flake8rules.com/rules/W503.html

# Also report % or .format strings
fstring-ignore-format=True

# Enforce correct indentation of hanging brackets
hang-closing = True

exclude =
    venv/,
